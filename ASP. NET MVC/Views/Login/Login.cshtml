@model Realitni_Kancelar.Models.Person

@{
    ViewBag.Title = "Login";
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<h2>Login</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        
        <div class="form-group">

            @Html.Label("Nick: ", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.Nick)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Heslo: ", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-12">
                @Html.PasswordFor(m => m.Password)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-12">
                <input id="Submit1" type="submit" class="btn btn-default" value="Prihlasit" />

            </div>
        </div>
        @Html.ValidationMessage("")
    </div>
}
    

