@model Realitni_Kancelar.Models.Person

@{
    ViewBag.Title = "Register";
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<h2>Register</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Jméno: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FirstName)
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Přijmení: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName)
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Telefoní číslo: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Contact)
            </div>
        </div>
        <br />
        <div class="form-group">

            @Html.Label("Nick: ", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.Nick)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Heslo: ", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-12">
                @Html.PasswordFor(m => m.Password)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-12">
                <input id="Submit1" type="submit" class="btn btn-default" value="Zaregistrovat" />
                
            </div>
        </div>
        @Html.ValidationSummary()

    </div>
}
